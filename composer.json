{
    "name": "aura/filter-input-bundle",
    "type": "library",
    "description": "Integration bundle for Aura.Input with Aura.Filter",
    "keywords": [ "filter", "validate", "sanitize", "form", "input" ],
    "homepage": "https://github.com/friendsofaura/FOA.Filter_Input_Bundle",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "FOA Contributors",
            "homepage": "https://github.com/friendsofaura/FOA.Filter_Input_Bundle/contributors"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "aura/input": "dev-develop",
        "aura/filter": "dev-develop"
    },
    "autoload": {        
        "psr-4": {
            "FOA\\Filter_Input_Bundle\\": "src/",
            "FOA\\Filter_Input_Bundle\\_Config\\": "config/"
        }
    },
    "extra": {
        "aura": {
            "type": "kernel",
            "config": {
                "common": "FOA\\Filter_Input_Bundle\\_Config\\Common"                
            }
        }
    }
}
